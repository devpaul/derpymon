{
	"compilerOptions": {
		"declaration": false,
		"downlevelIteration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"es6",
			"es2015.collection",
			"es2015.core",
			"es2015.iterable",
			"es2015.promise",
			"es2015.proxy",
			"es2015.symbol",
			"es2015.symbol.wellknown",
			"esnext.asynciterable"
		],
		"module": "umd",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"outDir": "dist/",
		"removeComments": false,
		"sourceMap": true,
		"strict": true,
		"target": "es5",
		"types": [ "intern" ]
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts",
		"node_modules/@types/aframe/index.d.ts"
	]
}
